[Unit]
Description=BlueChi systemd service controller manager daemon
Documentation=man:bluechi(1) man:bluechi.conf(5)
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/bluechi
Restart=on-failure

[Install]
WantedBy=multi-user.target
